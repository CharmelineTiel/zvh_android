<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteText"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splashscreen_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_15">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:padding="@dimen/padding_15"
                android:width="300dp"
                android:background="@color/colorAccent"
                android:text="Inloggen"
                android:textAllCaps="false"
                android:textColor="@color/whiteText"
                android:textSize="@dimen/bigger_text_tablet" />

            <TextView
                android:id="@+id/orLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginBtn"
                android:width="300dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:textAlignment="center"
                android:textColor="@color/ms_black"
                android:textSize="@dimen/bigger_text_tablet"
                android:textStyle="bold" />

            <Button
                android:id="@+id/registerBtn"
                android:padding="@dimen/padding_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orLbl"
                android:layout_margin="@dimen/margin_15"
                android:width="300dp"
                android:background="@color/registerColor"
                android:text="Registreren"
                android:textAllCaps="false"
                android:textColor="@color/whiteText"
                android:textSize="@dimen/bigger_text_tablet" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
