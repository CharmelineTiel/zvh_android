<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="charmelinetiel.android_tablet_zvg.charmelinetiel.zorgVoorHetHart.fragments.Register.RegisterCompletedFragment">



    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:src="@drawable/ic_check_circle_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/registration_successful"
            android:textSize="@dimen/bigger_text_tablet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="@string/registeredTxt1"
            android:textAlignment="center"
            android:textSize="@dimen/bigger_text_tablet" />

        <TextView
            android:id="@+id/emailAdress"
            android:textStyle="bold"
            android:textSize="@dimen/bigger_text_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/registeredTxt2"
            android:textAlignment="center"
            android:textSize="@dimen/bigger_text_tablet" />
        <Button
            android:id="@+id/goToLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:width="@dimen/button_tablet"
            android:layout_margin="@dimen/margin_20"
            android:padding="@dimen/padding_15"
            android:text="@string/action_sign_in"
            android:textSize="@dimen/bigger_text_tablet"
            android:textAllCaps="false"
            android:textColor="@color/whiteText"
            />

    </LinearLayout>

</RelativeLayout>
