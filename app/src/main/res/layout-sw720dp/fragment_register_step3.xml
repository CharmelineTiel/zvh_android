<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Consulent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uw consulent bij het St. Antonius Ziekenhuis"/>
    <Spinner
        android:background="@color/lighterGrey"
        android:spinnerMode="dialog"
        android:id="@+id/consultants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20"
        android:padding="@dimen/padding_20"
        android:textSize="@dimen/normal_text_tablet"
        android:textColor="@color/lightGrey"
        />

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terug"
            android:padding="@dimen/padding_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_margin="20dp"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_tablet"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            android:width="@dimen/button_tablet"
            />
        <Button
            android:layout_toEndOf="@+id/backBtn"
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registreren"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_margin="20dp"
            android:padding="@dimen/padding_20"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_tablet"
            android:background="@color/RegisterColor"
            android:textAllCaps="false"
            android:width="@dimen/button_tablet"
            />

    </RelativeLayout>

    </LinearLayout>