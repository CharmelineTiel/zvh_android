<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/measurementStep3"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/IssuesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/padding_10"
        android:textSize="@dimen/bigger_text_mobile"
        android:text="Noteer eventuele veranderingen in uw gezondheid (optioneel)"
        />
    <TextView
        android:id="@+id/dateTimeNow"
        android:layout_below="@+id/IssuesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/extraRemarksInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/lighterGrey"
        android:layout_below="@id/dateTimeNow"/>

    <Button
        android:id="@+id/cancel_measurement3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extraRemarksInput"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:width="@dimen/button_mobile"
        android:background="@color/lightGrey"
        android:text="Terug"
        android:textAllCaps="false"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/bigger_text_mobile" />

    <Button
        android:id="@+id/complete_measurement_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_measurement3_button"
        android:layout_alignBottom="@+id/cancel_measurement3_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/cancel_measurement3_button"
        android:width="@dimen/button_mobile"
        android:background="@color/colorAccent"

        android:text="Opslaan"
        android:textAllCaps="false"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/bigger_text_mobile" />

</RelativeLayout>
</ScrollView>