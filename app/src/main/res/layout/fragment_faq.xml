<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_15"
        >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <iammert.com.expandablelib.ExpandableLayout
            android:id="@+id/el"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:childLayout="@layout/layout_child"
            app:parentLayout="@layout/layout_parent" />

<TextView
    android:id="@+id/contactTxt"
    android:layout_marginTop="50dp"
    android:textSize="@dimen/normal_text_mobile"
    android:textAlignment="center"
    android:layout_below="@+id/el"
    android:layout_centerHorizontal="true"
    android:text="Staat uw vraag er niet bij? Neem contact op met uw consulent. \n \n"
    android:layout_width="250dp"
    android:layout_height="wrap_content" />

    android:maxLines="1"

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backBtn"
            android:padding="10dp"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contactTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terug"
            android:width="180dp"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_mobile"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/contactBtn"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contactTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Opnemen"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_mobile"
            android:width="180dp"
            android:background="@color/colorAccent"
            android:textAllCaps="false"
            />

    </LinearLayout>

</RelativeLayout>
    </ScrollView>

</RelativeLayout>
