<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

        <EditText
            android:width="@dimen/formFieldSize"
            android:background="@color/lighterGrey"
            android:id="@+id/email"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:padding="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:textColor="@color/lightGrey"
            android:hint="Vul uw email in"/>

        <EditText
            android:id="@+id/pass1"
            android:width="@dimen/formFieldSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lighterGrey"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/margin"
            android:textSize="@dimen/normalText"
            android:inputType="textPassword"
            android:textColor="@color/lightGrey"
            android:hint="Vul een wachtwoord in"/>

        <EditText
            android:width="@dimen/formFieldSize"
            android:background="@color/lighterGrey"
            android:id="@+id/pass2"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:padding="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:inputType="textPassword"
            android:textColor="@color/lightGrey"
            android:hint="Herhaal uw wachtwoord"/>



        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
            android:padding="10dp"
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terug"
            android:layout_marginTop="@dimen/margin"
            android:layout_margin="10dp"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/biggerText"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            android:width="@dimen/buttonM"
            />
        <Button
            android:padding="10dp"
            android:id="@+id/nextScreenBtn"
            android:layout_toEndOf="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volgende"
            android:layout_margin="10dp"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/biggerText"
            android:background="@color/RegisterColor"
            android:textAllCaps="false"
            android:width="@dimen/buttonM"
            />

    </RelativeLayout>
</LinearLayout>
