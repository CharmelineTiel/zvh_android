
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Inloggegevens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="@dimen/margin_15"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:text="E-mailadres"/>

        <EditText
            android:id="@+id/email"
            android:width="@dimen/form_field_mobile"
            android:background="@color/lighterGrey"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:padding="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_mobile"
            android:textColor="@color/lightGrey"
            android:inputType="textEmailAddress"
            android:hint="Vul uw e-mail in"/>

    <TextView
        android:layout_marginTop="@dimen/margin_15"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:text="Wachtwoord"/>
        <EditText
            android:id="@+id/pass1"
            android:width="@dimen/form_field_mobile"
            android:background="@color/lighterGrey"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:padding="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_mobile"
            android:textColor="@color/lightGrey"
            android:inputType="textPassword"
            android:hint="Vul een wachtwoord in"/>

    <TextView
        android:layout_marginTop="@dimen/margin_15"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:text="Herhaal wachtwoord"/>

        <EditText
            android:width="@dimen/form_field_mobile"
            android:background="@color/lighterGrey"
            android:id="@+id/pass2"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:padding="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_mobile"
            android:inputType="textPassword"
            android:textColor="@color/lightGrey"
            android:hint="Herhaal uw wachtwoord"/>



        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
            android:padding="10dp"
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terug"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_margin="10dp"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_mobile"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            android:width="@dimen/button_mobile"
            />
        <Button
            android:padding="10dp"
            android:id="@+id/nextScreenBtn"
            android:layout_toEndOf="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volgende"
            android:layout_margin="10dp"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_mobile"
            android:background="@color/registerColor"
            android:textAllCaps="false"
            android:width="@dimen/button_mobile"
            />

    </RelativeLayout>
</LinearLayout>

</ScrollView>