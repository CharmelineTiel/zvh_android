<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splashscreen_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginBottom="100dp"
            android:paddingBottom="@dimen/margin_15"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inloggen"
        android:layout_margin="@dimen/margin_15"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/bigger_text_mobile"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:width="300dp"
        />

            <TextView
                android:id="@+id/orLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/loginBtn"
                android:layout_below="@+id/loginBtn"
                android:layout_marginEnd="135dp"
                android:textColor="@color/ms_black"
                android:textSize="@dimen/bigger_text_mobile"
                android:textStyle="bold" />
    <Button
        android:layout_below="@+id/orLbl"
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registreren"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/bigger_text_mobile"
        android:background="@color/registerColor"
        android:textAllCaps="false"
        android:width="300dp"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
