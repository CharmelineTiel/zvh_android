<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/loginPage"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="charmelinetiel.android_tablet_zvg.charmelinetiel.zorgVoorHetHart.activities.LoginActivity"
        tools:showIn="@layout/activity_login">

        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_zvh" />

    <EditText
        android:id="@+id/username"
        android:width="@dimen/form_field_mobile"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lighterGrey"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:padding="@dimen/padding_10"
        android:textSize="@dimen/normal_text_mobile"
        android:layout_marginBottom="@dimen/margin_20"
        android:inputType="textEmailAddress"
        android:hint="Vul uw e-mail in"/>

    <EditText
        android:layout_below="@+id/username"
        android:width="@dimen/form_field_mobile"
        android:background="@color/lighterGrey"
        android:id="@+id/password"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:padding="@dimen/padding_10"
        android:textSize="@dimen/normal_text_mobile"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Vul uw wachtwoord in"/>


        <RelativeLayout
            android:id="@+id/loginLayout"
            android:padding="@dimen/margin_15"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuleren"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/bigger_text_mobile"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            android:width="@dimen/button_mobile"
            />
    <Button
        android:id="@+id/loginButton"
        android:layout_toEndOf="@id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/bigger_text_mobile"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:width="@dimen/button_mobile"
        />

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:id="@+id/iForgot"
        android:layout_below="@id/backButton"
        android:text="Wachtwoord vergeten?"
        android:focusable="true"
        android:clickable="true"
        android:textSize="@dimen/margin_15"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>

