<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="charmelinetiel.android_tablet_zvg.activity.LoginActivity"
        tools:showIn="@layout/activity_login">


        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_zvh" />
    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:text="Email"/>
    <EditText
        android:id="@+id/username"
        android:width="@dimen/formFieldSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lighterGrey"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:padding="@dimen/input_padding"
        android:inputType="textEmailAddress"
        android:hint="Vul uw email in"/>

    <TextView
        android:layout_marginTop="@dimen/margin"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:text="Wachtwoord"/>
    <EditText
        android:layout_below="@+id/username"
        android:width="@dimen/formFieldSize"
        android:background="@color/lighterGrey"
        android:id="@+id/password"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:padding="@dimen/input_padding"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Vul uw wachtwoord in"/>

    <CheckBox android:id="@+id/checkbox_autoLogin"
        android:layout_width="wrap_content"
        android:padding="@dimen/margin"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin"
        android:layout_height="wrap_content"
        android:text="Automatisch inloggen" />

        <RelativeLayout
            android:id="@+id/loginLayout"
            android:padding="@dimen/margin"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuleren"
            android:layout_marginRight="@dimen/margin"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/biggerText"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            android:width="@dimen/buttonM"
            />
    <Button
        android:layout_toEndOf="@id/cancelBtn"

        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/biggerText"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:width="@dimen/buttonM"
        />

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:id="@+id/iForgot"
        android:layout_below="@id/cancelBtn"
        android:text="Wachtwoord vergeten?"
        android:focusable="true"
        android:clickable="true"
        android:textSize="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>


    </LinearLayout>
    </ScrollView>

