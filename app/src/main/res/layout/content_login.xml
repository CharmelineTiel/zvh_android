<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="charmelinetiel.android_tablet_zvg.activity.LoginActivity"
    tools:showIn="@layout/activity_login">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

<RelativeLayout
    android:id="@+id/loginLayout"
    android:padding="@dimen/margin"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/username"
        android:width="@dimen/formFieldSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lighterGrey"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/margin"
        android:hint="Vul uw email in"/>

    <EditText
        android:layout_below="@+id/username"
        android:width="@dimen/formFieldSize"
        android:background="@color/lighterGrey"
        android:id="@+id/password"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/margin"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Vul uw wachtwoord in"/>

    <TextView
        android:id="@+id/iForgot"
        android:layout_below="@id/password"
        android:text="Wachtwoord vergeten?"
        android:focusable="true"
        android:clickable="true"
        android:layout_margin="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox android:id="@+id/checkbox_autoLogin"
        android:layout_below="@+id/iForgot"
        android:layout_width="wrap_content"
        android:padding="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_height="wrap_content"
        android:text="Automatisch inloggen" />

        <Button
            android:layout_below="@+id/checkbox_autoLogin"
            android:padding="@dimen/margin"
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuleren"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/biggerText"
            android:background="@color/lightGrey"
            android:textAllCaps="false"
            android:width="@dimen/buttonM"
            />
    <Button
        android:layout_toEndOf="@id/cancelBtn"
        android:layout_below="@+id/checkbox_autoLogin"
        android:padding="@dimen/margin"
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_margin="@dimen/margin"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/biggerText"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:width="@dimen/buttonM"
        />

</RelativeLayout>
    </ScrollView>
</LinearLayout>
