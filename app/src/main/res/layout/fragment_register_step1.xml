<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="@dimen/margin"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Persoonsgegevens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/input_padding"
                android:text="Voornaam"/>
    <EditText
        android:id="@+id/firstName"
        android:width="@dimen/formFieldSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lighterGrey"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:padding="@dimen/input_padding"
        android:textSize="@dimen/normalText"
        android:hint="Vul uw voornaam in"
        android:textColor="@color/lightGrey" />

            <TextView
                android:layout_marginTop="@dimen/margin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:text="Achternaam"/>
    <EditText
        android:width="@dimen/formFieldSize"
        android:background="@color/lighterGrey"
        android:id="@+id/lastName"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:padding="@dimen/input_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normalText"
        android:textColor="@color/lightGrey"
        android:hint="Vul uw achternaam in"/>

            <TextView
                android:layout_marginTop="@dimen/margin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:text="Geboortedatum"/>
        <EditText
            android:editable="false"
            android:width="@dimen/formFieldSize"
            android:background="@color/lighterGrey"
            android:id="@+id/dateOfBirth"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:padding="@dimen/input_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:textColor="@color/lightGrey"
            android:hint="Vul uw geboortedatum in"/>


            <TextView
                android:layout_marginTop="@dimen/margin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:text="Geslacht bij geboorte"/>

        <RadioGroup
            android:buttonTint="@color/colorPrimaryDark"
            android:layout_below="@+id/genderLbl"
            android:id="@+id/radioGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin">

            <RadioButton
                android:buttonTint="@color/colorPrimaryDark"
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Man"
                android:textSize="@dimen/normalText"
                android:checked="true" />

            <RadioButton
                android:buttonTint="@color/colorPrimaryDark"
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normalText"
                android:text="Vrouw" />
        </RadioGroup>


            <TextView
                android:layout_marginTop="@dimen/margin"
                android:textStyle="bold"
                android:id="@+id/weightLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:text="@string/weight"/>

            <EditText
                android:id="@+id/length_input"
                android:width="@dimen/formFieldSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lighterGrey"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:padding="@dimen/input_padding"
                android:textSize="@dimen/normalText"
                android:inputType="number"
                android:textColor="@color/lightGrey"
                android:hint="Vul uw gewicht in"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/LengthLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:text="@string/length"/>

            <EditText
                android:width="@dimen/formFieldSize"
                android:background="@color/lighterGrey"
                android:id="@+id/weight_input"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:padding="@dimen/input_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normalText"
                android:inputType="number"
                android:textColor="@color/lightGrey"
                android:hint="Vul uw lengte in"/>

            <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:padding="10dp"
        android:id="@+id/firstBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuleren"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/biggerText"
        android:background="@color/lightGrey"
        android:textAllCaps="false"
        android:width="@dimen/buttonM"
        />
    <Button
        android:id="@+id/secondBtn"
        android:layout_toEndOf="@+id/firstBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volgende"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:textColor="@color/whiteText"
        android:textSize="@dimen/biggerText"
        android:background="@color/RegisterColor"
        android:textAllCaps="false"
        android:width="@dimen/buttonM"
        />
</RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
