<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="charmelinetiel.android_tablet_zvg.fragments.register.RegisterStep1Fragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    <LinearLayout
        android:padding="@dimen/margin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
        android:width="@dimen/formFieldSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lighterGrey"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/margin"
        android:textSize="@dimen/normalText"
        android:textColor="@color/lightGrey"
        android:hint="Vul uw voornaam in"/>

    <EditText
        android:width="@dimen/formFieldSize"
        android:background="@color/lighterGrey"
        android:id="@+id/lastname"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normalText"
        android:textColor="@color/lightGrey"
        android:hint="Vul uw achternaam in"/>

        <EditText
            android:width="@dimen/formFieldSize"
            android:background="@color/lighterGrey"
            android:id="@+id/email"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalText"
            android:textColor="@color/lightGrey"
            android:hint="Vul uw email in"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Geslacht bij geboorte"
    android:layout_margin="@dimen/margin"
    android:textSize="@dimen/normalText"
    android:layout_marginBottom="0dp"
    />

        <RadioGroup
            android:id="@+id/radioGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_marginTop="0dp"
            >

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Man"
                android:textSize="@dimen/normalText"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normalText"
                android:text="Vrouw" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vul uw Geboortedatum in"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/normalText"
            />
        <DatePicker
            android:background="@color/lighterGrey"
            android:id="@+id/dateOfBirth"
            android:layout_marginLeft="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:hint="Vul uw geboortedatum in"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
